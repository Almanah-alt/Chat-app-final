<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginTop="@dimen/link_text_padding"

    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:background="@color/card_bg_color"
       >

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="@dimen/link_text_padding"
           android:layout_weight="1">

           <TextView
               android:id="@+id/chat_username"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="@dimen/card_email_text_size"
               android:textColor="@color/colorWhite"
               tools:text="@string/some_text" />

           <TextView
               android:id="@+id/chat_last_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/hintTextColor"
               tools:text="@string/some_text" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_gravity="end"
           android:padding="@dimen/link_text_padding"
           android:layout_weight="0.6">

           <TextView
               android:id="@+id/chat_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               tools:text="@string/some_text"
               android:textColor="@color/hintTextColor"
               android:textAlignment="textEnd"/>
       </LinearLayout>
   </LinearLayout>

</androidx.cardview.widget.CardView>
