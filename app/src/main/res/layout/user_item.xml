<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/link_text_padding"
    android:background="@color/colorBlack"
    android:layout_marginBottom="@dimen/padding_msg"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
            <TextView
                android:id="@+id/list_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/some_text"
                style="@style/edit_text"/>
            <TextView
                android:id="@+id/list_user_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hintTextColor"
                tools:text="@string/some_text"
                android:layout_marginTop="@dimen/padding_msg"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <TextView
            android:textAlignment="textEnd"
            android:id="@+id/list_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hintTextColor"
            tools:text="@string/some_text"/>
    </LinearLayout>

</LinearLayout>